mdp

const int n = 3; // length of the password

module pass_verification

    h  : [0..n];
    pc : [0..1];
    c  : [0..2*n]; // counter of the attacker
    e  : [0..1]; // termination of the program

    []  (h>0)&(pc=0)&(c<2*n)&(e=0)  -> 1/2 : (h'=h-1)&(pc'=1) + 1/2 : (c'=c+1);
    [a] (pc=1)&(c<2*n)              -> 1/2 : (pc'=0)          + 1/2 : (c'=c+1); // current character matches
    [b] (pc=1)&(c<2*n)              -> 1/2 : (pc'=0)&(e' =1)  + 1/2 : (c'=c+1); // current character does not match


    // the counter has reached the max value
    []  (h>0)&(pc=0)&(c=2*n)&(e=0)  -> (h'=h-1)&(pc'=1);
    [c] (pc=1)&(c=2*n)              -> (pc'=0);         // current character matches
    [d] (pc=1)&(c=2*n)              -> (pc'=0)&(e' =1); // current character does not match

    // termination
    []  (h=0)&(pc=0)&(c<2*n)&(e=0)  -> 1/2 : (e' =1)          + 1/2 : (c'=c+1);
    []  (h=0)&(pc=0)&(c=2*n)&(e=0)  -> (e' =1);
    []  (e=1)                       -> true;

endmodule

init  (e=0)&(h=n)&(pc=0)&(c=0)  endinit

label "c0" = (c=0)&(e=1);
label "c1" = (c=1)&(e=1);
label "c2" = (c=2)&(e=1);
label "c3" = (c=3)&(e=1);
label "c4" = (c=4)&(e=1);
label "c5" = (c=5)&(e=1);
label "c6" = (c=6)&(e=1);
